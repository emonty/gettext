/* Copyright (C) 1995-1998, 2000, 2001 Free Software Foundation, Inc.
d22 9
a30 2
#include <stdlib.h>
#include <string.h>
a45 12
char *
_nl_find_language (name)
     const char *name;
{
  while (name[0] != '\0' && name[0] != '_' && name[0] != '@@'
	 && name[0] != '+' && name[0] != ',')
    ++name;

  return (char *) name;
}


